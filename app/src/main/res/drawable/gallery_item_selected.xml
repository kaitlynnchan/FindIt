<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:color="#09170E"
                        android:width="6dp" />
                </shape>
            </item>
            <item android:gravity="top|end">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
